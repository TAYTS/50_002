/*
Define the PASS string display segments
*/
module pass_str (
    input char[3],  // bit size for char selection
    output segs[7]  // bit size for the output
  ) {

  always {
    case(char) {
      0: segs = 7b1101101;
      1: segs = 7b1101101;
      2: segs = 7b1110111;
      3: segs = 7b1110011;
      default: segs = 7b000000;
    }
  }
}
